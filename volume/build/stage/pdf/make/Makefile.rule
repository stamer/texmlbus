# Makefile.rule
# defines the rule, which consists of target, prerequisite and recipe.

# compatibility for old Makefile.texmplate
TEXENGINEOPT ?= -pdf
$(TARGET.pdf): %.pdf: %.tex
	$(LATEXMK) $(TEXENGINEOPT) -f -interaction=nonstopmode $(firstword $<)

pdfclean: backup
	$(LATEXMK) -C '$(TARGET.base)'

CLEAN += pdfclean
ALLCLEAN += pdfclean


